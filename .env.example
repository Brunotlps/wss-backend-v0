# ==============================================
# WSS BACKEND - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and adjust values
# Never commit .env to version control!
# ==============================================

# ======================
# DJANGO SETTINGS
# ======================
DJANGO_SETTINGS_MODULE=config.settings.development
# Generate secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-CHANGE-ME-generate-a-new-key-with-command-above
DEBUG=True
# Comma-separated list (no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# ======================
# DATABASE
# ======================
# PostgreSQL container variables
POSTGRES_DB=wss_backend_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Django database connection (django-environ format)
# Format: postgres://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgres://postgres:postgres@db:5432/wss_backend_db

# ======================
# REDIS
# ======================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# ======================
# CELERY
# ======================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ======================
# AWS S3 / STORAGE
# ======================
USE_S3=False
# Uncomment and fill when using S3
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ======================
# EMAIL
# ======================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# ======================
# CORS
# ======================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ======================
# JWT (Simple JWT)
# ======================
# Access token lifetime in minutes
JWT_ACCESS_TOKEN_LIFETIME=15
# Refresh token lifetime in days
JWT_REFRESH_TOKEN_LIFETIME=7

# ======================
# PRODUCTION OVERRIDES
# ======================
# Uncomment and adjust for production deployment
# DJANGO_SETTINGS_MODULE=config.settings.production
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# DATABASE_URL=postgres://produser:prodpass@prod-db-host:5432/prod_db
# USE_S3=True
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True